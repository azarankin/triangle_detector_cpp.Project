{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "ENABLE_LIBRARIES": "OFF",
                "ENABLE_BENCHMARKS": "ON",
                "ENABLE_EXECUTABLES": "OFF",
                "ENABLE_ALL_TESTS_COMPILATION": "ON",
                "ENABLE_CPP_TESTS": "OFF",
                "ENABLE_CUDA_OPENCV_TESTS": "OFF",
                "ENABLE_PURE_CUDA_TESTS": "ON"
                
            }
        },
        {
            "name": "debug-x64",
            "inherits": "base",
            "displayName": "Debug PC RTX4060TI build",
            "description": "Debug build with CUDA and OpenCV",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CUDA_COMPILER": "/usr/local/cuda/bin/nvcc",
                "CMAKE_CUDA_ARCHITECTURES": "89"
            }
        }
    ]

}
