{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "SWITCH_TO_PROFILING": "ON",
                "ENABLE_BENCHMARKS": "ON",
                "ENABLE_EXECUTABLES": "OFF",
                "ENABLE_DEBUG": "OFF",
                "SWITCH_TO_ALL_TESTS_COMPILATION": "OFF",
                "ENABLE_CPP_TESTS": "OFF",
                "ENABLE_CUDA_OPENCV_TESTS": "OFF",
                "ENABLE_PURE_CUDA_TESTS": "OFF"
            }
        },
        {
            "name": "debug-x64",
            "inherits": "base",
            "displayName": "Debug PC RTX4060TI build",
            "description": "Debug build with CUDA and OpenCV",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CUDA_COMPILER": "/usr/local/cuda/bin/nvcc",
                "CMAKE_CUDA_ARCHITECTURES": "89",
                "CMAKE_CUDA_FLAGS_DEBUG": "-G -O0"
            }
        },
        {
            "name": "release-x64",
            "inherits": "base",
            "displayName": "Release PC RTX4060TI build (O3)",
            "description": "Release build with CUDA, OpenCV and O3 optimization",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CUDA_COMPILER": "/usr/local/cuda/bin/nvcc",
                "CMAKE_CUDA_ARCHITECTURES": "89",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3",
                "CMAKE_CUDA_FLAGS_RELEASE": "-O3 -Xptxas -O3 -DNDEBUG"
            }
        }
    ]
}
