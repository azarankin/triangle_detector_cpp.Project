{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug build",
            "generator": "Ninja",
            "description": "Debug build with CUDA and OpenCV",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CUDA_COMPILER": "/usr/local/cuda/bin/nvcc"
            }
        }
    ]

}
